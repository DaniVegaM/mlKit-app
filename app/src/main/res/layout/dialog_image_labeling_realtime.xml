<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Etiquetado de Imágenes"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Vista de cámara para análisis en tiempo real -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:background="#000000" />

    <!-- Resultados del análisis -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/labelResultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presiona 'Iniciar Análisis' para comenzar el etiquetado"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:textColor="#333333" />

    </ScrollView>

    <!-- Botones de control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Galería"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnToggleCamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Iniciar Análisis"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cerrar"
            android:layout_marginStart="8dp"
            android:backgroundTint="#FF5722" />

    </LinearLayout>

</LinearLayout>
