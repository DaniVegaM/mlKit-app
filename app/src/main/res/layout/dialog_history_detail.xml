<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_dialog_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles del Análisis"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:padding="16dp" />

        <!-- Tipo de análisis -->
        <TextView
            android:id="@+id/detailAnalysisType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Análisis"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="16dp" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/detailAnalysisDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha: 01/01/2024 12:00:00"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="16dp" />

        <!-- Texto de entrada -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrada:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp" />

        <TextView
            android:id="@+id/detailInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto de entrada"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/text_result_background" />

        <!-- Resultado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp" />

        <TextView
            android:id="@+id/detailResultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado del análisis"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/text_result_background" />

        <!-- Confianza -->
        <TextView
            android:id="@+id/detailConfidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confianza: 95%"
            android:textSize="14sp"
            android:textColor="@color/accent_color"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="16dp"
            android:visibility="gone" />

        <!-- Información adicional -->
        <TextView
            android:id="@+id/detailAdditionalData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Información adicional"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/text_result_background"
            android:visibility="gone" />

        <!-- Botón cerrar -->
        <Button
            android:id="@+id/btnCloseDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar"
            android:layout_margin="16dp"
            android:backgroundTint="@color/secondary_color" />

    </LinearLayout>

</ScrollView>
